<% rows ||= 3 %>

<div class="mb-3">
  <label  class="form-label"
          aria-label="<%= label %>"
          :for="<%= dom_id.html_safe %>">
    <%= label %>
  </label>
  <textarea :id="<%= dom_id.html_safe %>"
            class="form-control"
            data-translatable="true"
            rows="<%= rows %>"
            v-model="<%= model %>.<%= property %>"
            placeholder="<%= placeholder %>"></textarea>
  <% if hint.present? %>
    <div class="form-text"><%= hint %></div>
  <% end %>
</div>