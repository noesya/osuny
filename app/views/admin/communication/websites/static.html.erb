title: >
  <%= @about.to_s %>
<% if @website.default_image.attached? %>
default_image:
  id: <%= @website.default_image.blob&.id %>
<% end %>
social:
<%
[
  :email,
  :mastodon,
  :peertube,
  :x,
  :github,
  :linkedin,
  :youtube,
  :vimeo,
  :instagram,
  :facebook,
  :tiktok
].each do |network|
  value = @website.send "social_#{network}"
  next if value.blank?
%>
  <%= network %>: >-
    <%= value %>
<% end %>