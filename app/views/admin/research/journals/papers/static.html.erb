---
title: "<%= @about.title %>"
slug: "<%= @about.slug %>"
description: >
  <%= prepare_text_for_static @about.description %>
<% if @about.volume && @about.volume.path %>
volumes:
  - "<%= @about.volume.path %>"
<% end %>
weight: <%= @about.position %>
date: "<%= @about.published_at.iso8601 %>"
<% if @about.pdf.attached? %>
pdf: "<%= @about.pdf.blob_id %>"
<% end %>
keywords: >
  <%= @about.keywords %>
researchers:
<% @about.people.each do |person| %>
- "<%= person.slug %>"
<% end %>
chapo: "<%= @about.abstract %>"
description_short: "<%= @about.abstract %>"
abstract: "<%= @about.abstract %>"
references: "<%= @about.references %>"
